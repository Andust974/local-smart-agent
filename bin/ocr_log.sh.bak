#!/usr/bin/env bash
# Общий логгер для OCR-пайплайна. Подключать: source "$ROOT/bin/ocr_log.sh"
: "${OCR_TAG:=ocr-prod}"
: "${OCR_LOG:=}"

_log_emit() {
  local lvl="$1"; shift
  local msg="$*"
  local ts; ts="$(date -Iseconds)"
  local line="[$ts] [$lvl] $msg"
  # в файл, если задан
  [[ -n "$OCR_LOG" ]] && printf "%s\n" "$line" >> "$OCR_LOG"
  # в stdout
  printf "%s\n" "$line"
  # в journal, если есть systemd-cat
  if command -v systemd-cat >/dev/null 2>&1; then
    printf "%s\n" "$line" | systemd-cat -t "$OCR_TAG"
  fi
}
log_info(){ _log_emit INFO "$@"; }
log_ok()  { _log_emit OK   "$@"; }
log_fail(){ _log_emit FAIL "$@"; }
