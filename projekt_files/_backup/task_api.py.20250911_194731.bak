from fastapi import FastAPI
import os

app = FastAPI()

@app.get("/health")
def _health():
    return {"status": "ok"}

if __name__ == "__main__":
    import uvicorn
    host = os.getenv("TASK_API_HOST", "127.0.0.1")
    port = int(os.getenv("TASK_API_PORT", "8766"))
    uvicorn.run(app, host=host, port=port)
